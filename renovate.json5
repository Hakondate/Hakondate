{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  schedule: [
    'before 4am on Monday',
  ],
  enabledManagers: [
    'github-actions',
    'pub',
  ],
  packageRules: [
    {
      groupName: 'Firebase Packages',
      matchPackageNames: [
        'cloud_firestore',
        'firebase_messaging',
        'firebase_remote_config',
        'firebase_crashlytics',
        'firebase_analytics',
        'firebase_core',
        'firebase_dynamic_links',
        'firebase_messaging',
        'firebase_storage',
      ],
    },
    {
      groupName: 'All minor and patch dependencies',
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchPackageNames: [
        '!cloud_firestore',
        '!firebase_messaging',
        '!firebase_remote_config',
        '!firebase_crashlytics',
        '!firebase_analytics',
        '!firebase_core',
        '!firebase_dynamic_links',
        '!firebase_messaging',
        '!firebase_storage',
      ],
    },
  ],
  prHourlyLimit: 0,
  prConcurrentLimit: 0,
  labels: [
    'Type: Renovate',
  ],
  configMigration: true,
  dependencyDashboard: false,
  fvm: {
    enabled: true,
  },
}
