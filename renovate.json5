{
  /** このファイルの入力保管を有効化 */
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  /** 依存設定 */
  "extends": [
    "config:recommended",
  ],

  /** タイムゾーン */
  "timezone": "Asia/Tokyo",

  /** 実行日時設定 */
  "schedule": [
    /** 毎週月曜の早朝 */
    "before 4am on Monday",
  ],

  /** 監視対象のライブラリ群 */
  "enabledManagers": [
    "github-actions",
    "pub",
  ],

  /** カスタムルール */
  "packageRules": [
    /** Firebase関連はまとめる */
    {
      "groupName": "Firebase Packages",
      "matchPackageNames": [
        "cloud_firestore",
        "firebase_messaging",
        "firebase_remote_config",
        "firebase_crashlytics",
        "firebase_analytics",
        "firebase_core",
        "firebase_dynamic_links",
        "firebase_messaging"
      ],
    },
    /** マイナーアップデートはまとめる */
    {
      "groupName": "All minor and patch dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "excludePackageNames":[
        "cloud_firestore",
        "firebase_messaging",
        "firebase_remote_config",
        "firebase_crashlytics",
        "firebase_analytics",
        "firebase_core",
        "firebase_dynamic_links",
        "firebase_messaging"
      ],
    },
  ],

  /** PRの時間あたり上限数 */
  "prHourlyLimit": 0,

  /** PRの同時上限数 */
  "prConcurrentLimit": 5,

  /** PRにつけるラベル */
  "labels": [
    "Type: Renovate"
  ],

  /** このファイルのマイグレーションPRを発行するか */
  "configMigration": true,

  /** DependencyDashboardを有効にするか */
  "dependencyDashboard": false,
}
